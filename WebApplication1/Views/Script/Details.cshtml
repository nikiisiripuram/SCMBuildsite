                url: '@Url.Action("Details", "Script")',
                type: 'GET',
                data: { scriptName: scriptName },
                success: function (data) {
                    $('#scriptDetails').html(data);
                },
                error: function () {
                    alert('Failed to retrieve data.');
                }
            });
        }
    </script>
</body>

