                            <td><b>Application:</b></td>
                            <td>@scriptData["AppVersion"]</td>
                        </tr>
                        <tr>
                            <td><b>Entities Affected:</b></td>
                            <td>@scriptData["EntitiesAffected"]</td>
                        </tr>
                        <tr>
                            <td><b>Comments:</b></td>
